filetype off
set foldmethod=syntax
set encoding=utf8
set nocompatible
set number
set hlsearch
set smartindent
set tabstop=2
set shiftwidth=2
set expandtab
set hidden
set nofoldenable
set path=${PWD}/**
set redrawtime=10000
set cursorcolumn
